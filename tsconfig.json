{
  "compilerOptions": {
    // Output
    "target": "es2015",
    "module": "commonjs",
    "outDir": "dist",
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "composite": true,
    "rootDir": "src", // needed if "composite" is true

    // Development
    "strict": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "importsNotUsedAsValues": "error",
  },
}
